{
	"compilerOptions": {
		"allowJs": true,
		"checkJs": true,
		"baseUrl": "./",
		"downlevelIteration": true,
		"lib": [
			"es5",
			"es6",
			"dom"
		],
		"module": "es2015",
		"outDir": "./build/",
		"paths": {
			"@/*": [
				"./src/*"
			]
		},
		"rootDir": ".",
		"sourceMap": true,
		"strict": true,
		"target": "es5"
	},
	"include": [
		"./src/**/*.ts"
	]
}
